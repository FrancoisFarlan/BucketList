<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Bucket List{% endblock %}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/default.css') }}">

    <link rel="icon" href="{{ asset('img/favicon.png') }}">
</head>
<body>


<header>
    <div class="container">
        <div class="d-flex text-white bg-dark">
            <img id="logo" class="p-3 text-white" src="{{ asset('img/logo.png') }}" alt="logo Bucket-Liste">
            <h1 class="pt-2 pb-2">Bucket-List</h1>
        </div>

        <nav class="navbar navbar-expand-lg bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('app_main_home') }}">Accueil</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}" title="Lougout">Logout (Hello {{ app.user.userIdentifier }})</a>
                            </li>
                        {% else %} <a class="nav-link" href="{{ path('app_register') }}" title="Create your account">Register</a>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}" title="Login">Login</a>
                            </li>
                        {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('wish_list')}}">Souhaits</a>
                    </li>
                        {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('wish_ajout') }}">Ajouter</a>
                    </li>
                        {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_main_about') }}">A propos</a>
                    </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</header>


<main>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container">
        {% block body %} {% endblock %}
    </div>
</main>

<footer>
    <div class="container">
        &copy; Bucket-List {{ "now"|date('Y') }}
    </div>
</footer>


</body>
</html>